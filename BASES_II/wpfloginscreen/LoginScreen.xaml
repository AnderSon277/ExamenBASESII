<Window x:Class="wpfloginscreen.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfloginscreen"
        mc:Ignorable="d"
        Title="Login" Height="319" Width="300" FontSize="14" Background="#1A237E">
    <Border Background="#B71C1C" CornerRadius="20" Margin="20">
        <StackPanel Margin="20">
            <Label Content="Login" Foreground="#1A237E" FontSize="25" HorizontalAlignment="Center" />
            <Separator Background="#545d6a"/>
            <Label Content="Nombre de Usuario" Foreground="#1A237E" />
            <TextBox Name="txtUsername" Background="#E57373" Foreground="#1A237E" FontSize="18"/>
            <Label Content="Contraseña" Foreground="#1A237E" />
            <PasswordBox Name="txtPassword" Background="#E57373" Foreground="#1A237E" FontSize="18"/>
            <Button Name="btnSubmit" Click="btnSubmit_Click" Content="Entrar" Margin="60 10" Background="#545d6a" Foreground="#1A237E" FontSize="18"/>
        </StackPanel>
    </Border>
</Window>
